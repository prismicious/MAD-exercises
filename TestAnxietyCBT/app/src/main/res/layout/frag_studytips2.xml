<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E9F3"
    tools:context=".Exercise_StudyTips">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/exerciseCard"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/exerciseTitle15"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="140dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_iconmonstr_idea_1"
                android:text="Tips for studying (1-4)"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                app:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tipTitle"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exerciseTitle15"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="1. Establish a study routine"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"

                app:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tipSubtitle"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tipTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="Creating a routine–such as studying for an hour after dinner, or for a half hour each morning–will encourage consistency. When getting started, create a study schedule and set reminders on your phone to help build the habit."
                android:textColor="@android:color/black"
                android:textSize="14dp"
                app:fontFamily="@font/lato"

                />

            <TextView
                android:id="@+id/tip2Title"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tipSubtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="2. Create a dedicated study area."
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"

                app:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tip2Subtitle"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tip2Title"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="Choose an area that is free of distractions where you can set up your study materials and leave them between sessions"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                app:fontFamily="@font/lato"

                />

            <TextView
                android:id="@+id/tip3Title"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tip2Subtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="3. Focus on the quality of studying, not the quantity"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"

                app:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tip3Subtitle"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tip3Title"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="Try studying in half-hour to hour-long blocks, with breaks in between. This way, you can stay alert and focused the whole time."
                android:textColor="@android:color/black"
                android:textSize="14dp"
                app:fontFamily="@font/lato"
                />

            <TextView
                android:id="@+id/tip4Title"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tip3Subtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="4. Set specific study goals"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"

                app:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tip4Subtitle"
                style="@style/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tip4Title"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:text="Use goals to guide the direction of a study session and provide a sense of accomplishment when completed. Create realistic goals that can be completed in a single study session"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                app:fontFamily="@font/lato" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>